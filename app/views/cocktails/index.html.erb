<div class="container">

  <div class="row">
    <h1 class="text-center"> The Cocktail Club</h1>
    <% @cocktails.each do |cocktail| %>

      <div class="col-xs-12 col-sm-4">
        <div class="card"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path 'wine.jpg'%>)">
            <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
